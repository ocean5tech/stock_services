{
  "version": 2,
  "builds": [
    {
      "src": "api/vercel/*.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/vercel/stock-analysis(.*)",
      "dest": "/api/vercel/stock-analysis.py$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  }
}